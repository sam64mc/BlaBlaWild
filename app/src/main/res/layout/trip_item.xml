<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/prenomConducteur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Le prénom du conducteur"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/dateHeure"
        android:layout_alignLeft="@+id/dateHeure"
        android:layout_alignStart="@+id/dateHeure" />

    <TextView
        android:id="@+id/dateHeure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="19dp"
        android:text="date et heure du départ"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/prixTrajet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="prix"
        android:layout_alignBaseline="@+id/dateHeure"
        android:layout_alignBottom="@+id/dateHeure"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp" />
</RelativeLayout>



